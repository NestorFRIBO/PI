<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nfb.pi.Registre"
    android:background="@drawable/fondo2">

    <Button
        android:text="Registrarme"
        android:layout_width="200dp"
        android:layout_marginTop="75dp"
        android:id="@+id/btnRegis"
        android:layout_height="50dp"
        android:textColor="@android:color/background_light"
        android:background="?android:attr/colorPressedHighlight"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Aceptar licencia y politica de la empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/checkBox"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/Epass2"
        android:layout_alignStart="@+id/Epass2" />

    <EditText
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Epass1"
        android:background="@android:color/background_light"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/Email"
        android:layout_alignStart="@+id/Email" />

    <EditText
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Epass2"
        android:background="@android:color/background_light"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/Epass1"
        android:layout_alignStart="@+id/Epass1" />

    <EditText
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/Email"
        android:background="@android:color/background_light"
        android:layout_marginTop="31dp"
        android:text="              Email"
        android:layout_below="@+id/Enombre"
        android:layout_centerHorizontal="true" />

    <EditText
        android:inputType="textPersonName"
        android:text="             Nombre"
        android:ems="10"
        android:layout_marginTop="74dp"
        android:id="@+id/Enombre"
        android:background="@android:color/background_light"
        android:layout_height="45dp"
        android:layout_width="290dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Email" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/keygris"
        android:layout_above="@+id/checkBox"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/imageView3"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/keygris"
        android:id="@+id/imageView"
        android:layout_above="@+id/Epass2"
        android:layout_toStartOf="@+id/btnRegis"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/usergris"
        android:id="@+id/imageView5"
        android:layout_above="@+id/Email"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mailgris"
        android:id="@+id/imageView7"
        android:layout_above="@+id/Epass1"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="5dp" />

</RelativeLayout>
